                          <th> Status </th>
                          <th> Action </th>
                          
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <% orders.forEach(function(i) { %>
                            <tr>
                              <td>
                                <div class="form-check form-check-muted m-0">
                                  <label class="form-check-label">
                                    <input type="checkbox" class="form-check-input">
                                  </label>
                                </div>
                              </td>
                              <td>
                                <span class="pl-2"><%= i.address.name%></span>
                              </td>
                              <!-- <% if(i.userId){ %>
                                <td><%= i.userId.email %></td>
                              <% } else { %>
                                <td>No Email</td>
                                <% } %> -->
                                <td>
                                  <% i.product.forEach(function(product) { %>
                                    <%= product.product_id.name %><br>
                                  <% }); %>
                                </td>   
                              <td><%= i.address.address %> </td>
                              <td><%= i.total %></td>
                              <td><%= i.paymentMethod %> </td>
                              <% if(i.status=='Pending'){ %>
                                <td><div class="badge badge-outline-primary"><%= i.status %></div></td>
                              <% } else if(i.status=='Delivered'){ %>
                                <td><div class="badge badge-outline-success"><%= i.status %></div></td>
                              <% } else { %>
                                <td><div class="badge badge-outline-danger"><%= i.status %></div></td>
                              <% } %>
                              <td>
                                <% if(i.status=='Pending'){ %>
                                  <a href="#" data-order-id="<%= i._id %>" class="update-delivery-link">
                                    <button type="button" class="btn badge-outline-primary">Update Delivered</button>
                                  </a>
                                <% } else if(i.status=='Delivered'){ %>
                                  <span class="btn btn-success" style="width: 140px;">Delivered</span>
                                <% } else if(i.status=='Return'){ %>
                                  <a href="approveReturn?id=<%= i._id %>">
                                    <button type="button" class="btn btn-primary ">Approve Return</button>
                                  </a>
                                <% } else { %>
                                  <span class="btn btn-danger" style="width: 140px;">Cancelled</span>
                                <% } %>
                              </td>
                            </tr>
                          <% }); %>
                                           
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>


          <script>
            $(document).ready(function() {
              function updateDeliveryStatus(orderId) {
                // Send an AJAX request
                $.ajax({
                  url: 'admin/approveDelivery', // Replace with your server endpoint for updating the delivery status
                  method: 'POST',
                  data: { orderId: orderId },
                  success: function(response) {
                    // Handle the response
                    if (response.success) {
                      // Update the UI or display a success message
                      window.location.href = '/admin/orderStatus';   
                      console.log('Delivery status updated successfully');
                    } else {
                      // Handle the error or display an error message
                      console.error('Failed to update delivery status');
                    }
                  },
                  error: function(xhr, status, error) {
                    // Handle the error or display an error message
                    console.error('An error occurred while updating delivery status:', error);
                  }
                });
              }
          
              // Event listener for the update delivery button
              $('.update-delivery-link').click(function(e) {
                e.preventDefault();
                var orderId = $(this).data('order-id');
                updateDeliveryStatus(orderId);
              });
            });
          </script>