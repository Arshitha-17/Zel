<div class="m-5 pt-5">
    <div>
        <h2>Add Product</h2>
    </div>
    <div>
        <form action="/admin/adminAddProduct" method="post" enctype="multipart/form-data">
        <div class="form-group my-3">
            <label for="nameInput">Name</label>
            <input type="text" class="form-control form-control-sm" id="nameInput" name="name" placeholder="Enter Name" required>
        </div>
        <div class="form-group my-3">
            <label for="nameInput">Price</label>
            <input type="text" class="form-control form-control-sm" id="nameInput" name="price" placeholder="Enter Rate" required>
        </div>
        <div>
            <select class="form-select form-select-sm" name="category" aria-label="Default select example">
                <option selected>Select</option>
                <% categoryList.forEach(function(item) { %>
                    <option value="<%= item.category %>"><%= item.category %></option>
                <% }) %>
            </select>
        </div>
        <div class="form-group my-3">
          <label for="nameInput">Stock</label>
          <input type="text" class="form-control form-control-sm" id="nameInput" name="stock" placeholder="Enter Stock" required>
      </div>
        <div class="form-group my-3">
            <label for="descriptionInput">Description</label>
            <textarea class="form-control form-control-sm" id="descriptionInput" name="description" rows="3"></textarea>
        </div>
        <div class="form-group my-3">
            <label for="productImage">Add image: </label>
            <input type="file" class="form-control-file" multiple name="image" id="productImage" >
        </div>
        <div>
            <p class="text-success"></p>
        </div>
        <button type="submit" class="btn btn-primary my-3">Submit</button>
        </form>
    </div>
</div>


