  <script>
   function addToCart(productId){
	fetch('/cart',
	{
		method:'POST',
		headers:{
			'Content-Type':'application/json',
		},
		body:JSON.stringify({productId}),
	}).then(response=>response.json()).then(data=>{
		console.log(data);
	}).catch(error=>{
		console.error(error)
	})
   }
</script>
 
	